								<site>http://download.eclipse.org/modeling/tmf/xtext/updates/composite/releases</site>
								<site>http://franca.github.io/franca/update_site/releases</site>
								<site>http://updates.yakindu.org/sct/kepler/releases</site>							
								
								
							</associateSites>
						</configuration>
