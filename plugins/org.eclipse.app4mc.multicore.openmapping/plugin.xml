<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               id="org.eclipse.app4mc.multicore.menu"
               label="AMALTHEA Multicore Features">
            <command
                  commandId="org.eclipse.app4mc.multicore.openmapping.commands.generateTasks"
                  id="org.eclipse.app4mc.multicore.openmapping.popups.createTasks"
                  label="Generate Tasks"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <instanceof
                              value="org.eclipse.core.resources.IResource">
                        </instanceof>
                        <or>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="amxmi">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="amxmi-sw">
                           </test>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="org.eclipse.app4mc.multicore.openmapping.commands.performMapping"
                  id="org.eclipse.app4mc.multicore.openmapping.popups.performMapping"
                  label="Perform Mapping"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <instanceof
                              value="org.eclipse.core.resources.IResource">
                        </instanceof>
                        <or>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="amxmi">
                           </test>
                           <test
                                 property="org.eclipse.core.resources.extension"
                                 value="amxmi-sw">
                           </test>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.app4mc.multicore.openmapping.handlers.PerformMappingHandler"
            commandId="org.eclipse.app4mc.multicore.openmapping.commands.performMapping">
      </handler>
      <handler
            class="org.eclipse.app4mc.multicore.openmapping.handlers.CreateTasks"
            commandId="org.eclipse.app4mc.multicore.openmapping.commands.generateTasks">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.app4mc.multicore.openmapping.commands.category"
            name="Category">
      </category>
      <command
            id="org.eclipse.app4mc.multicore.openmapping.commands.generateTasks"
            name="Generate Tasks">
      </command>
      <command
            id="org.eclipse.app4mc.multicore.openmapping.commands.performMapping"
            name="Perform Mapping">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.app4mc.multicore.openmapping.preferencePages.OpenMappingPreferencePage"
            id="org.eclipse.app4mc.multicore.openmapping.preferencePages.mapping"
            name="AMALTHEA Mapping">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.app4mc.multicore.openmapping.preferencePages.OpenMappingPreferenceInitializer">
      </initializer>
   </extension>

</plugin>
