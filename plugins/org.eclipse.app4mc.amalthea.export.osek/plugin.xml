<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.eclipse.app4mc.amalthea.export.osek.commands.osekgenerationhandler"
               id="org.eclipse.app4mc.amalthea.export.osek.popups.osekgenerationhandler"
               label="Generate OSEK Files"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="activeMenuSelection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="org.eclipse.core.resources.IResource">
                     </instanceof>
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="amxmi">
                     </test>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.app4mc.amalthea.export.osek.commands.osekgenerationhandler"
            name="Generate OSEK Files">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.app4mc.amalthea.export.osek.handlers.OsekGenerationHandler"
            commandId="org.eclipse.app4mc.amalthea.export.osek.commands.osekgenerationhandler">
      </handler>
   </extension>

</plugin>
